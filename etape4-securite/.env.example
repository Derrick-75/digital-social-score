# Database & Redis (for rate limiting)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=10

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,*.your-domain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-frontend.com
FORCE_HTTPS=False

# SSL/TLS
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Logging & Monitoring
LOG_LEVEL=INFO
ENABLE_ACCESS_LOGS=True

# Model Paths
BERT_MODEL_PATH=../etape2-modele-ia/models/bert_model
SIMPLE_MODEL_PATH=../etape2-modele-ia/models/simple_model

# Application
API_TITLE=Digital Social Score API
API_VERSION=1.0.0
DEBUG=False
