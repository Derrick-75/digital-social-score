# JWT Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-256-bits-minimum
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Keys (for API Key authentication alternative)
MASTER_API_KEY=dss-master-key-change-in-production
